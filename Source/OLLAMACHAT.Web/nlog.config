<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="/logs/nlog.log">
	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
	</extensions>
	<variable name="layout" value="${date:format=dd.MM.yyyy HH\:mm\:ss}|${level:uppercase=true:padding=5}|${logger:shortName=true:padding=30}|${message} ${exception:separator=\r\n:format=tostring}" />
	<targets async="true">
		<target xsi:type="ColoredConsole"
				name="console"
				layout="${var:layout}" >
			<highlight-word  foregroundColor="Red" ignoreCase="true" text="ERROR" />
		</target>
	</targets>
	<rules>
		<logger name="VelikiyPrikalel*" minlevel="Trace" writeTo="console" />
		<logger name="RabbitMQ.*" minlevel="Debug" writeTo="console" />
		<logger name="*" minLevel="Error" writeTo="console"/>
		<logger name="*XmlKeyManager" final="true" writeTo="console" />
		<logger name="*Diagnostics" final="true" writeTo="console" />
		<logger name="Microsoft.*" maxLevel="Info" final="true"/>
		<logger name="*" minlevel="Debug" writeTo="console" />
		<logger name="*" minlevel="Info" writeTo="console" />
	</rules>
</nlog>