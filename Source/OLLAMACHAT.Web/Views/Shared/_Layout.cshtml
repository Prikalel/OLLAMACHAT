<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Chat Application</title>
    <style>
        :root {
            --dark-bg: #121212;
            --darker-bg: #0a0a0a;
            --text-color: #e0e0e0;
            --user-color: #4FC3F7;
            --ai-color: #FF8A80;
            --thinking-color: #A9A9A9;
            --primary-accent: #7b2cbf;
            --secondary-accent: #00bbf9;
            --button-bg: linear-gradient(135deg, #7b2cbf 0%, #3a0ca3 100%);
            --button-hover: linear-gradient(135deg, #9d4edd 0%, #4a1dce 100%);
            --glow-effect: 0 0 10px rgba(123, 44, 191, 0.7);
        }

        @@keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        body {
            background: linear-gradient(-45deg, #121212, #1a1a2e, #16213e, #0f3460);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .chat-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: rgba(10, 10, 10, 0.8);
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(123, 44, 191, 0.2);
        }

        .model-selector {
            margin-bottom: 25px;
        }

        #model-select {
            background-color: var(--darker-bg);
            color: var(--text-color);
            border: 1px solid var(--primary-accent);
            border-radius: 8px;
            padding: 8px 12px;
            font-size: 14px;
            margin-left: 10px;
            transition: all 0.3s ease;
        }

        #model-select:focus {
            outline: none;
            border-color: var(--secondary-accent);
            box-shadow: var(--glow-effect);
        }

        #chat-display {
            height: 500px;
            border: 1px solid rgba(123, 44, 191, 0.3);
            padding: 20px;
            overflow-y: auto;
            background-color: rgba(15, 15, 15, 0.6);
            margin-bottom: 20px;
            border-radius: 12px;
            scrollbar-width: thin;
            scrollbar-color: var(--primary-accent) var(--darker-bg);
        }

        #chat-display::-webkit-scrollbar {
            width: 8px;
        }

        #chat-display::-webkit-scrollbar-track {
            background: var(--darker-bg);
            border-radius: 4px;
        }

        #chat-display::-webkit-scrollbar-thumb {
            background-color: var(--primary-accent);
            border-radius: 4px;
        }

        .message {
            margin-bottom: 20px;
            padding: 12px 16px;
            border-radius: 12px;
            background-color: rgba(30, 30, 30, 0.6);
            animation: fadeIn 0.3s ease-out;
            transition: transform 0.2s ease;
        }

        .message:hover {
            transform: translateX(5px);
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .user-message {
            color: var(--user-color);
            border-left: 4px solid var(--user-color);
            margin-right: 20%;
        }

        .ai-message {
            color: var(--ai-color);
            border-left: 4px solid var(--ai-color);
            margin-left: 20%;
        }

        .thinking {
            color: var(--thinking-color);
            font-style: italic;
            border-left: 4px solid var(--thinking-color);
        }

        #input-area {
            display: flex;
            gap: 12px;
            align-items: flex-end;
        }

        #message-input {
            flex-grow: 1;
            padding: 14px;
            background-color: rgba(20, 20, 20, 0.8);
            color: var(--text-color);
            border: 1px solid rgba(123, 44, 191, 0.4);
            border-radius: 12px;
            resize: none;
            font-size: 15px;
            transition: all 0.3s ease;
            min-height: 60px;
            max-height: 150px;
        }

        #message-input:focus {
            outline: none;
            border-color: var(--secondary-accent);
            box-shadow: var(--glow-effect);
        }

        button {
            padding: 12px 24px;
            background: var(--button-bg);
            color: white;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 600;
            font-size: 15px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(123, 44, 191, 0.4);
            height: 60px;
            min-width: 100px;
        }

        button:hover {
            background: var(--button-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(123, 44, 191, 0.6);
        }

        button:active {
            transform: translateY(0);
        }

        img.chat-image {
            max-width: 512px;
            margin: 10px 0;
            border-radius: 8px;
            border: 1px solid rgba(123, 44, 191, 0.3);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        img.chat-image:hover {
            transform: scale(1.02);
        }

        .message strong {
            font-weight: 600;
            text-shadow: 0 0 5px currentColor;
        }

        /* Neon effect for AI and User labels */
        .user-message strong {
            color: var(--user-color);
        }

        .ai-message strong {
            color: var(--ai-color);
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .chat-container {
                padding: 15px;
                border-radius: 12px;
            }

            #chat-display {
                height: 400px;
            }

            .user-message, .ai-message {
                margin-left: 0;
                margin-right: 0;
            }
        }

        footer {
            color: var(--text-color);
            text-align: center;
            padding: 20px;
            margin-top: 30px;
            opacity: 0.8;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="importmap">
      {
        "imports": {
          "@@zephyr3d/device": "https://unpkg.com/@@zephyr3d/device@0.2.4/dist/index.js",
          "@@zephyr3d/scene": "https://unpkg.com/@@zephyr3d/scene@0.6.1/dist/index.js",
          "@@zephyr3d/backend-webgl": "https://unpkg.com/@@zephyr3d/backend-webgl@0.1.8/dist/index.js",
          "@@zephyr3d/base": "https://unpkg.com/@@zephyr3d/base@0.1.5/dist/index.js"
        }
      }
    </script>
</head>
<body>

@RenderBody()

<footer>
    <p>Author: Velikiy Prikalel<br>
        <a href="mailto:jispar@mail.ru" style="color: var(--secondary-accent);">jispar@mail.ru</a></p>
</footer>

@RenderSection("Scripts", required: false)
</body>
</html>